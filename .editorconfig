# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript/JSON/YAML files
[*.{js,jsx,ts,tsx,json,jsonc,yaml,yml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Config files
[*.{toml,ini,conf}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Package manager lock files (no editing)
[{package-lock.json,pnpm-lock.yaml,yarn.lock}]
insert_final_newline = false
indent_size = unset
